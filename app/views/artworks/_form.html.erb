<%= form_for([@artwork.user, @artwork]) do |f| %>
  <% if @artwork.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(@artwork.errors.count, "error") %> prohibited this artwork from being saved:</h2>

      <ul>
      <% @artwork.errors.full_messages.each do |msg| %>
        <li><%= msg %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

  <div class="field">
    <b>Your Art title</b><br />
    <%= f.text_field :title %>
  </div>
  <div class="field">
    <b><%= f.label :price %></b><br />
    <%= f.text_field :price %>
  </div>
  <div class="field">
    <b><%= f.label :description %></b><br />
    <%= f.text_area :description, :rows => 5 %>
  </div>
  <div class="field">
    <b>Picture of your Art </b><i>(paste URL with picture of Your Art)</i><br />
    <%= f.text_field :image_url %>
  </div>
  <div class="actions">
    <%= f.submit value = "Sumbit" %>
  </div>
<% end %>
